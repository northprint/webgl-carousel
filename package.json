{
  "name": "webgl-carousel",
  "type": "module",
  "version": "0.2.5",
  "description": "A high-performance image carousel library powered by WebGL with stunning visual effects",
  "main": "dist/webgl-carousel.cjs.js",
  "module": "dist/webgl-carousel.esm.js",
  "browser": "dist/webgl-carousel.umd.js",
  "types": "dist/webgl-carousel.d.ts",
  "files": [
    "dist",
    "README.md",
    "README.ja.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/webgl-carousel.d.ts",
      "import": "./dist/webgl-carousel.esm.js",
      "require": "./dist/webgl-carousel.cjs.js",
      "default": "./dist/webgl-carousel.umd.js"
    },
    "./effects": {
      "import": "./dist/carousel-effects.esm.js",
      "require": "./dist/carousel-effects.cjs.js"
    }
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "demo": "python3 -m http.server 8080 --directory demos",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/northprint/webgl-carousel.git"
  },
  "keywords": [
    "carousel",
    "webgl",
    "webgl2",
    "image-gallery",
    "slideshow",
    "slider",
    "effects",
    "transition",
    "animation",
    "gpu",
    "typescript",
    "react",
    "vue",
    "svelte",
    "component",
    "ui",
    "frontend"
  ],
  "author": "Norihiro Narayama",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/northprint/webgl-carousel/issues"
  },
  "homepage": "https://northprint.github.io/webgl-carousel/",
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@playwright/test": "^1.54.1",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^16.3.0",
    "@testing-library/svelte": "^5.2.8",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.3",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "playwright": "^1.54.1",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "rollup": "^4.9.6",
    "rollup-plugin-dts": "^6.1.0",
    "svelte": "^5.37.3",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^7.0.6",
    "vitest": "^3.2.4",
    "vue": "^3.4.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "svelte": ">=3.0.0",
    "vue": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    },
    "svelte": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "size-limit": [
    {
      "path": "dist/webgl-carousel.esm.js",
      "limit": "50 KB"
    },
    {
      "path": "dist/webgl-carousel.min.js",
      "limit": "80 KB"
    },
    {
      "path": "dist/webgl-carousel.umd.js",
      "limit": "80 KB"
    }
  ]
}
